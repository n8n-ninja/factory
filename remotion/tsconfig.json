{
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "lib": ["DOM", "ES2023"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@layout": ["./src/components/layout/index.ts"],
      "@animations/*": ["./src/components/animations/*"],
      "@theme/*": ["./src/theme/*"],
      "@utils/*": ["./src/Utils/*"]
    }
  },
  "exclude": ["remotion.config.ts"]
}
