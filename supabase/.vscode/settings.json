{
  "deno.enable": true,
  "deno.lint": true,

  "deno.suggest.imports.hosts": {
    "https://deno.land": true,
    "https://edge-runtime.supabase.com": true,
    "https://esm.sh": true
  },
  "deno.enablePaths": ["supabase/functions"],
  "deno.unstable": [
    "bare-node-builtins",
    "byonm",
    "sloppy-imports",
    "unsafe-proto",
    "webgpu",
    "broadcast-channel",
    "worker-options",
    "cron",
    "kv",
    "ffi",
    "fs",
    "http",
    "net"
  ],
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  }
}
